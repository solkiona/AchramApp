<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN APP THEME -->
    <style name="AppTheme.NoActionBar"
        parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Status bar -->
        <item name="android:statusBarColor">#059669</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Android 12+ Splash -->
        <item name="android:windowSplashScreenBackground">#059669</item>

        <!-- Optional centered logo -->
        <!-- Remove or set @null if you don't want a logo -->
        <item name="android:windowSplashScreenAnimatedIcon">
            @drawable/ic_splash_logo
        </item>

        <item name="android:windowSplashScreenIconBackgroundColor">
            @android:color/transparent
        </item>

        <!-- Avoid cutout overlap -->
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>

    </style>

</resources>


